@page
@model CreateShipModel
@{
    var message = ViewData["Message"]?.ToString();
}


<h3>Create Ship</h3>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-danger" role="alert">
        @message
    </div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="ship.Name"></label>
        <input asp-for="ship.Name" class="form-control" />
        <span asp-validation-for="ship.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ship.Code"></label>
        <input asp-for="ship.Code" class="form-control" placeholder="AAAA-1111-A1" />
        <span asp-validation-for="ship.Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ship.Length"></label>
        <input asp-for="ship.Length" class="form-control" type="number" />
        <span asp-validation-for="ship.Length" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ship.Width"></label>
        <input asp-for="ship.Width" class="form-control" type="number" />
        <span asp-validation-for="ship.Width" class="text-danger"></span>
    </div>
    <br/>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
